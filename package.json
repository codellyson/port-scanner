{
  "name": "port-scanner-cli",
  "version": "1.0.1",
  "description": "A powerful CLI and web dashboard to list, monitor, and manage running ports on your system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ports": "./dist/index.js",
    "port-scanner": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/web/public dist/web/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "web": "node dist/index.js web",
    "web:demo": "DEMO_MODE=true node dist/index.js web",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "port",
    "scanner",
    "network",
    "cli",
    "monitoring",
    "ports",
    "netstat",
    "ss",
    "process",
    "dashboard",
    "web"
  ],
  "author": "codellyson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codellyson/port-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/codellyson/port-scanner/issues"
  },
  "homepage": "https://github.com/codellyson/port-scanner#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
